
@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum ="1" class="btn btn-outline-secondary">Home</a>

    @foreach (string cat in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@cat" asp-route-pageNum ="1"
           class="btn @(ViewBag.SelectedCategory == cat ? "btn-primary" : "btn-outline-secondary")">@cat</a>
    }
</div>