@{
}

@model Purchase
<div class="row m-1 p-1">
    <div id="categories" class="col-3">
        Buy More Books for Less Bucks :)<br />
    </div>
    <div class="col-9">   
        <h2>Check out now</h2>
        <p>Please enter you information so we can send an awesome book to you!</p>

        <form method="post" asp-action="Checkout" asp-controller="Purchase">
            <div asp-validation-summary="All" class="text-danger"></div>

            <h4>Ship To</h4>

            <div class="form-group">
                <label asp-for="Name">Name:</label><input asp-for="Name" class="form-control" />
            </div>

            <h4>Address</h4>

            <div class="form-group">
                <label asp-for="Address">Street Address:</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City">City:</label>
                <input asp-for="City" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="State">State:</label>
                <input asp-for="State" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Zip">Zip Code:</label>
                <input asp-for="Zip" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Country">Country:</label>
                <input asp-for="Country" class="form-control" />
            </div>

            <div class="float-end">
                <input class="btn btn-primary" type="submit" value="Checkout" />
            </div>

        </form>
    </div>
</div>