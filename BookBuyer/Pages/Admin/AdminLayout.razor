@inherits LayoutComponentBase

<div class="bg-info text-white p-2">
    <span class="navbar-brand m-lg-2">BookBuyer Administration</span>
</div>

<div class="container-fluid">
    <div class="row p-2">

        <div class="col-3">
            <div class="d-grid gap-2">
                @*navlink navigates within files themselves*@
                <NavLink class="btn btn-outline-primary btn-block"
                         href="/admin/books"
                         ActiveClass="btn-primary text-white"
                         Match="NavLinkMatch.Prefix">Books</NavLink>
                <NavLink class="btn btn-outline-primary btn-block"
                         href="/admin/orders"
                         ActiveClass="btn-primary text-white"
                         Match="NavLinkMatch.Prefix">Orders</NavLink>
            </div>
        </div>

        <div class="col">
            @Body
        </div>
    </div>
</div>
